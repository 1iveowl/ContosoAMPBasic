@model IEnumerable<SaaSFulfillmentClient.Models.SubscriptionOperation>

@{
    ViewData["Title"] = "Operations";
}

<h1>Operations</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TimeStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th> @Html.DisplayNameFor(model => model.OperationRequestSource)</th>
            <th> @Html.DisplayNameFor(model => model.ErrorStatusCode)</th>
            <th> @Html.DisplayNameFor(model => model.ErrorMessage)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeStamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Action)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td> @Html.DisplayFor(modelItem => item.OperationRequestSource)</td>
                <td> @Html.DisplayFor(modelItem => item.ErrorStatusCode)</td>
                <td> @Html.DisplayFor(modelItem => item.ErrorMessage)</td>
            </tr>
        }
    </tbody>
</table>